<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Masini.DaciaLogan.VerificareKilometrii">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottombarbackground"
            android:orientation="vertical">
            <TextView
                android:id="@+id/numeBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                android:paddingLeft="20dp">
            </TextView>
            <TextView
                android:id="@+id/anFabricatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="an fabricatie"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingLeft="20dp">
            </TextView>
            <ImageView
                android:id="@+id/imagineMasina"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                >
            </ImageView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="330dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="Introduceti numarul de kilometrii afisat in bordul masinii."
            android:textStyle="bold"
            android:textSize="27dp">

        </TextView>
        <EditText
            android:id="@+id/nrkilometriiAfisat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:inputType="number"
            android:hint="Kilometrii"
            android:shadowColor="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            >

        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Salveaza"
                android:background="@drawable/buttonsalveaza"
                android:textColor="@color/white">

            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>