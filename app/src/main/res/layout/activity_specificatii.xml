<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context="Masini.DaciaLogan.DaciaLogan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottombarbackground"
            android:orientation="vertical">
            <TextView
                android:id="@+id/numeBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                android:paddingLeft="20dp">
            </TextView>
            <TextView
                android:id="@+id/anFabricatie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="an fabricatie"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:paddingLeft="20dp">
            </TextView>
            <ImageView
                android:id="@+id/imagineMasina"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                >
            </ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specificatii"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="22dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:background="@drawable/specificatiibackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_engine">
            </ImageView>
            <TextView
                android:id="@+id/capacitate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="capacitate"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/specificatiibackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/ic_gearbox">
            </ImageView>
            <TextView
                android:id="@+id/cutieviteze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cutieviteze"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/specificatiibackground"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_gas">
            </ImageView>
            <TextView
                android:id="@+id/tipcombustibil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="combustibil"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center">
            </TextView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:background="@drawable/specificatiibackground">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="3dp"
                    android:src="@mipmap/ic_km">
                </ImageView>
                <TextView
                    android:id="@+id/nrKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nr KM"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/specificatiibackground">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/ic_seat">
                </ImageView>
                <TextView
                    android:id="@+id/nrlocuri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nrlocuri"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/specificatiibackground">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_gas">
                </ImageView>
                <TextView
                    android:id="@+id/capacitateRezervor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rezervor"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:id="@+id/pretinchiriere"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="pretinchiriere"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/zi"
                android:textSize="22dp"
                android:layout_marginTop="13dp">
            </TextView>
            <Button
                android:id="@+id/selecteaza"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/buttonselect"
                android:text="Selecteaza \nmasina"
                android:textSize="14dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/white"
                >

            </Button>
        </LinearLayout>


</RelativeLayout>